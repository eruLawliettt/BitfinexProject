<Page x:Class="BitfinexConnectorProject.Views.Rest.RestTradesView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BitfinexConnectorProject.Views"
      xmlns:vm="clr-namespace:BitfinexConnectorProject.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RestTradesView">

    <Grid
         Background="#ff6a32">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <DataGrid
            IsReadOnly="True"
            Grid.Column="1"
            Margin="5 10 10 10"
            ItemsSource="{Binding Trades, 
            UpdateSourceTrigger=PropertyChanged}"
            AutoGenerateColumns="True">

        </DataGrid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height=".2*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Text="TRADES"
                Foreground="Black"
                FontSize="24"
                FontWeight="Bold"
                Margin="10 10 0 0"/>

            <StackPanel
            Grid.Row="1"
            Margin="10 10 5 10"
            VerticalAlignment="Top">

                <Button
                Height="50"
                Margin="0 0 0 10"
                Background="Orange"
                Opacity=".8"
                Command="{Binding Get10LastBTCUSDTradesCommand}">
                    <TextBlock
                    Text="Get 10 last BTCUSD tarades"
                    TextWrapping="WrapWithOverflow"
                    TextAlignment="Center"/>
                </Button>

                <Button
                Height="50"
                Margin="0 0 0 10"
                Background="MediumPurple"
                Command="{Binding Get10LastETHUSDTradesCommand}">
                    <TextBlock
                    Text="Get 10 last ETHUSD tarades"
                    TextWrapping="WrapWithOverflow"
                    TextAlignment="Center"/>
                </Button>

                <Button
                Height="50"
                Margin="0 0 0 10"
                Background="Orange"
                Opacity=".8"
                Command="{Binding Get50LastBTCUSDTradesCommand}">
                    <TextBlock
                    Text="Get 50 last BTCUSD tarades"
                    TextWrapping="WrapWithOverflow"
                    TextAlignment="Center"/>
                </Button>

                <Button
                Height="50"
                Margin="0 0 0 10"
                Background="Orange"
                Opacity=".8"
                Command="{Binding GetBTCUSDTradesDataCommand}">
                    <TextBlock
                    Text="Get all last BTCUSD tarades (max 10000)"
                    TextWrapping="WrapWithOverflow"
                    TextAlignment="Center"/>
                </Button>

                <Button
                Height="50"
                Margin="0 0 0 10"
                Background="MediumPurple"
                Command="{Binding GetETHUSDTradesDataCommand}">
                    <TextBlock
                    Text="Get all last ETHUSD tarades (max 10000)"
                    TextWrapping="WrapWithOverflow"
                    TextAlignment="Center"/>
                </Button>

            </StackPanel>
        </Grid>

    </Grid>
</Page>
