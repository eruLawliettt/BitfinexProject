<Page x:Class="BitfinexConnectorProject.Views.WebSocket.BalanceView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BitfinexConnectorProject.Views"
      xmlns:vm="clr-namespace:BitfinexConnectorProject.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BalanceView"
      FontSize="24"
      FontFamily="Calibri">

    <Grid
        Background="#011f4b">

        <Grid.RowDefinitions>
            <RowDefinition Height=".2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel
            Orientation="Horizontal"
            VerticalAlignment="Center"
            Background="#03396c"
            Margin="10 0 10 0">

            <Label
                Content="BTC: 1"/>
            
            <Label
                Content="XRP: 15000"/>
            
            <Label
                Content="XMR: 50"/>
            
            <Label
                Content="DASH: 30"/>
            
        </StackPanel>

        <Grid Grid.Row="1"
              Margin="10"
              Background="#6497b1">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".28*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Content="Balance in USDT:"
            VerticalAlignment="Center"/>
        <Label
            Grid.Row="1"
            Content="Balance in BTC:"
            VerticalAlignment="Center"/>
        <Label
            Grid.Row="2"
            Content="Balance in XRP:"
            VerticalAlignment="Center"/>
        <Label
            Grid.Row="3"
            Content="Balance in XMR:"
            VerticalAlignment="Center"/>
        <Label
            Grid.Row="4"
            Content="Balance in DASH:"
            VerticalAlignment="Center"/>

            <Label
                Grid.Row="0"
                Grid.Column="1"
                Content="{Binding BalanceUsdt}"
                VerticalAlignment="Center"/>

            <Label
                Grid.Row="1"
                Grid.Column="1"
                Content="{Binding BalanceBtc}"
                VerticalAlignment="Center"/>

            <Label
                Grid.Row="2"
                Grid.Column="1"
                Content="{Binding BalanceXrp}"
                VerticalAlignment="Center"/>

            <Label
                Grid.Row="3"
                Grid.Column="1"
                Content="{Binding BalanceXmr}"
                VerticalAlignment="Center"/>

            <Label
                Grid.Row="4"
                Grid.Column="1"
                Content="{Binding BalanceDash}"
                VerticalAlignment="Center"/>

        </Grid>
    </Grid>
</Page>
