<Page x:Class="BitfinexConnectorProject.Views.WebSocketTradesView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BitfinexConnectorProject.Views"
      xmlns:vm="clr-namespace:BitfinexConnectorProject.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="WebSocketTradesView">

    <Page.DataContext>
        <vm:WebSocketTradesViewModel/>
    </Page.DataContext>

    <Grid
        Background="#B39AE5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height=".2*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Text="TRADES"
                Foreground="Black"
                FontSize="24"
                FontWeight="Bold"
                Margin="10 10 0 0"/>


            <StackPanel Grid.Row="1"
                VerticalAlignment="Top">
            <Button
                Content="BTC-USD Subscribe"
                Height="60"
                Background="Orange"
                Opacity=".8"
                Margin="5 0 0 5"
                Command="{Binding SubscribeToBTCUSDCommand}"/>
            
            <Button
                Content="BTC-USD Unsubscribe"
                Height="60"
                Background="Orange"
                Opacity=".8"
                Margin="5 0 0 0"
                Command="{Binding UnsubscribeToBTCUSDCommand}"/>

            <Button
                Content="ETH-USD Subscribe"
                Height="60"
                Background="MediumPurple"
                Opacity=".8"
                Margin="5 5 0 5"
                Command="{Binding SubscribeToETHUSDCommand}"/>

            <Button
                Content="ETH-USD Unsubscribe"
                Height="60"
                Background="MediumPurple"
                Opacity=".8"
                Margin="5 0 0 0"
                Command="{Binding UnsubscribeToETHUSDCommand}"/>

        </StackPanel>
            
        </Grid>
        
        <DataGrid
            IsReadOnly="True"
            Grid.Column="1"
            Margin="5 10 10 10"
            ItemsSource="{Binding Trades, 
            UpdateSourceTrigger=PropertyChanged}"
            AutoGenerateColumns="True">



        </DataGrid>
    </Grid>
    
        
</Page>
